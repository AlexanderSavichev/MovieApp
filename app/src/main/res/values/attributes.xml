<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FavouriteView">
        <attr name="faceColor" format="color" />
        <attr name="linesColor" format="color" />
        <attr name="tongueColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="neutral" value="1" />
        </attr>
    </declare-styleable>

    <attr name="favouriteViewStyle" format="reference" />

    <style name="FavouriteViewStyle">
        <item name="faceColor">@color/neutral</item>
        <item name="linesColor">@color/black</item>
        <item name="tongueColor">@color/red</item>
        <item name="borderWidth">0.8dp</item>
        <item name="state">neutral</item>
    </style>

</resources>